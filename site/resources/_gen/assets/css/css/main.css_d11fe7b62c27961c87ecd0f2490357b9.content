body{margin:0;font-family:Merriweather,Helvetica,Arial,sans-serif;font-size:16px;line-height:1.5;color:#f8f8f2;background-color:#272822;padding-left:calc(100vw - 100%)}p{text-align:justify;word-break:break-word}a{color:#ae81ff;text-decoration:none}a:hover{text-decoration:underline}h1,h2,h3,h4,h5,h6{font-weight:300;word-break:break-word}twitterwidget{margin-left:auto;margin-right:auto}blockquote{font-style:italic;padding-left:1rem;border-left:3px solid #75715e}img{max-width:100%}iframe{max-width:100%}table{border-collapse:separate;border-spacing:0;max-width:100%;width:100%}th,td{padding:.5rem;line-height:inherit}th{text-align:left;vertical-align:bottom;border-bottom:2px solid #75715e}td{vertical-align:top;border-bottom:1px solid #75715e}pre{padding:1.25rem;overflow-x:auto}code{font-family:courier new,Consolas,monopace;tab-size:4}hr{border:0;text-align:right;line-height:1px;height:1px;margin:0;margin-top:-1.7rem;margin-right:-.5rem;margin-bottom:60px}hr:after{content:"//";font-size:.9em;letter-spacing:-3px;color:#75715e;display:inline;padding-left:5px;padding-right:5px;position:relative}main{max-width:48rem;margin:0 auto 3rem;padding:0 2rem}.site-header .site-title{font-weight:300}.site-header .site-title>a{color:#f8f8f2;text-decoration:none}.site-header .site-nav>a{color:#f8f8f2}.site-header .site-nav>a:hover{text-decoration:none}.site-header .site-nav>a.active{border-bottom:2px solid #666}.site-header .site-nav>a+a{margin-left:1rem}.posts{list-style:none;padding:0}.posts>li{line-height:1.75}.posts>li span{color:#f92672;margin-right:1.5rem;font-size:.875rem}.posts>li a{color:#f8f8f2;text-decoration:none}.post{position:relative}.post .post-header{text-align:center;margin-bottom:0}.post .post-meta{margin:0;text-align:center;color:#f92672;font-size:.875rem}.videowrapper{float:none;clear:both;width:100%;position:relative;padding-bottom:56.25%;height:0}.videowrapper iframe{position:absolute;top:0;left:0;width:100%;height:100%}@media screen and (max-width:48rem){.site-header .site-title,.site-header .site-nav{text-align:center}}